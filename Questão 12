#include <stdio.h>
#include <stdlib.h>

int main(){
    
    int num1, num2, soma, produto, diferenca, quociente, resto;
    
    printf("Digite o primeiro número: ");
    scanf("%d", &num1);
    
    printf("Digite o segundo número: ");
    scanf("%d", &num2);
    
    soma = num1 + num2;
    printf("\nA soma é: %d", soma);
    
    produto = num1 * num2;
    printf("\nO produto é: %d", produto);
    
    if(num1>num2){
    diferenca = num1 - num2;
    printf("\nA diferença é: %d", diferenca);
    
    }else{
    diferenca = num2 - num1;
    printf("\nA diferença é: %d", diferenca);
    }
    
    quociente = num1 / num2;
    printf("\nO quociente é: %d", quociente);
    
    resto = num1 % num2;
    printf("\nO resto é: %d", resto);
    
    return 0;
}
