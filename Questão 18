#include <stdio.h>
#include <stdlib.h>

int main(){
    
    float PI = 3.14159;
    float raio, diametro, circunferencia, area;

    printf("Digite o raio do círculo: ");
    scanf("%f", &raio);

    diametro = 2 * raio;
    circunferencia = 2 * PI * raio;
    area = PI * raio * raio;
    
    printf("\nINFORMAÇÕES:");
    printf("\nDiâmetro: %.2f\n", diametro);
    printf("Circunferência: %.2f\n", circunferencia);
    printf("Área: %.2f", area);

    return 0;
}
